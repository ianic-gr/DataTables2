# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2
max_line_length = 125

# JavaScript, TypeScript, JSON
[*.{js,jsx,ts,tsx,json,jsonc}]
indent_size = 2
quote_type = double

# HTML, CSS, SCSS, LESS
[*.{html,css,scss,less,vue}]
indent_size = 2

# Markdown files
[*.{md,mdx}]
trim_trailing_whitespace = false
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# Python files
[*.py]
indent_size = 4

# Go files
[*.go]
indent_style = tab

# Makefile
[Makefile]
indent_style = tab

# XML files
[*.xml]
indent_size = 2

# Shell scripts
[*.{sh,bash}]
indent_size = 2

# Docker files
[Dockerfile*]
indent_size = 2

# Configuration files
[*.{toml,ini,cfg,conf}]
indent_size = 2

# Package files
[{package.json,package-lock.json,yarn.lock,pnpm-lock.yaml}]
indent_size = 2